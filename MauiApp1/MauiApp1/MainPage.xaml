<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             Title="M-Hike">

    <ScrollView>
        <VerticalStackLayout
            Padding="16"
            Spacing="16">
            
            <Label
                Text="M-Hike"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,32,0,0" />

            <Label
                Text="Hike Management App"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,8,0,0" />

            <Button
                x:Name="BtnAddHike"
                Text="Add New Hike"
                Padding="16"
                Margin="0,48,0,0"
                Clicked="OnAddHikeClicked" />

            <Button
                x:Name="BtnViewHikes"
                Text="View All Hikes"
                Padding="16"
                Clicked="OnViewHikesClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
